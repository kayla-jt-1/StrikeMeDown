@{
    ViewData["Title"] = "Home Page";
}
@model List<Bowler>

<!--Display a list of bowler contacts-->
<div>
    <table>
        <tr>
            <th>First Name</th>
            <th>Middle Initial</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone Number</th>
            <th>Team Name</th>
        </tr>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BowlerFirstName</td>
                <td>@b.BowlerMiddleInit</td>
                <td>@b.BowlerLastName</td>
                <td>@b.BowlerAddress</td>
                <td>@b.BowlerCity</td>
                <td>@b.BowlerState</td>
                <td>@b.BowlerZip</td>
                <td>@b.BowlerPhoneNumber</td>
                <td>@b.Team.TeamName</td>
                <td><a asp-action="Edit" asp-route-BowlerID="@b.BowlerID">Edit</a></td>
                <td><a asp-action="Delete" asp-route-BowlerID="@b.BowlerID">Delete</a></td>
            </tr>
        }
    </table>
    <br>
    <a asp-action="AddBowler">Add Bowler</a>
</div>